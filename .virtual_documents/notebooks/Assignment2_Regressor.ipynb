from sklearn.model_selection import cross_validate, KFold
from sklearn.neighbors import KNeighborsRegressor
from sklearn.metrics import make_scorer, mean_squared_error
import pandas as pd
import numpy as np

# Evaluate KNN across multiple k values and weighting schemes using CV
def rmse(y_true, y_pred):
    return np.sqrt(mean_squared_error(y_true, y_pred))

scoring = {"rmse": make_scorer(rmse, greater_is_better=False), "r2": "r2"}
cv = KFold(n_splits=10, shuffle=True, random_state=42)

models = [
    ("k=3, uniform",   KNeighborsRegressor(n_neighbors=3, weights='uniform')),
    ("k=5, uniform",   KNeighborsRegressor(n_neighbors=5, weights='uniform')),
    ("k=7, uniform",   KNeighborsRegressor(n_neighbors=7, weights='uniform')),
    ("k=9, uniform",   KNeighborsRegressor(n_neighbors=9, weights='uniform')),
    ("k=3, distance",  KNeighborsRegressor(n_neighbors=3, weights='distance')),
    ("k=5, distance",  KNeighborsRegressor(n_neighbors=5, weights='distance')),
    ("k=7, distance",  KNeighborsRegressor(n_neighbors=7, weights='distance')),
    ("k=9, distance",  KNeighborsRegressor(n_neighbors=9, weights='distance')),
]

rows = []

for name, model in models:
    cv_results = cross_validate(model, X_train_scaled, y_train,
                                cv=cv, scoring=scoring, return_train_score=True)

    rows.append([
        name,
        abs(cv_results["train_rmse"].mean()),
        abs(cv_results["test_rmse"].mean()),
        cv_results["train_r2"].mean(),
        cv_results["test_r2"].mean()
    ])

knn_table = pd.DataFrame(rows, columns=["Model", "Training RMSE", "Test RMSE", "Training R²", "Test R²"])
knn_table.to_csv("../data/knn_comparison_table.csv", index=False)
knn_table



# Plot KNN Test R² for all hyperparameter combinations
